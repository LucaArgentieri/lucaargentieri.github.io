---
const { href, icon, alt } = Astro.props;
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="bg-black text-accent rounded-[.75rem] w-fit p-10 h-fit inline-flex gap-10 break-inside-avoid active:scale-95 [&>img]:w-20"
    data-js="icon-button"
>
    <img src={icon} alt={alt} />
</a>
